<%- include ('../partials/header')%>
<h1 class="mt-5 d-flex justify-content-around">Add a new Mobile</h1>
<div class="container">
  <div class="row">
    <div style="width: 50%; margin: 3% auto">
      <form
        class="jsutify-content-around"
        method="post"
        action="/gadgets/mobiles"
      >
        <div class="form-group">
          <input class="form-control" text" name="mobile[ModelName]"
          placeholder="ModelName" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Brief]"
          placeholder="Brief" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Description]"
          placeholder="Description" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Image]"
          placeholder="Image" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[LaunchedDate]"
          placeholder="LaunchedDate" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Price]"
          placeholder="Price" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[CPU]" placeholder="CPU"
          />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[GPU]" placeholder="GPU"
          />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[RAM]" placeholder="RAM"
          />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Display]"
          placeholder="Display" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Memory]"
          placeholder="Memory" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[Camera]"
          placeholder="Camera" />
        </div>
        <div class="form-group">
          <input class="form-control" text" name="mobile[ItemType]"
          placeholder="Item Type" />
        </div>
        <button class="btn btn-block btn-lg btn-info">Submit</button>
        <div class="form-group"></div>
      </form>
    </div>
  </div>
</div>

<%- include ('../partials/footer')%>
