<link
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  rel="stylesheet"
/>
<div id="container" class="animate__animated animate__backInLeft">
  <div
    class="jumbotron text-center"
    style="background-color: #282c35; color: beige; border-radius: 35px"
  >
    <h1>Welcome to the NEWS Section</h1>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around p-5">
      <div class="d-flex animate__animated animate__fadeInDown flex-column">
        <h1><%=news.header%></h1>
        <div class="d-flex p-0 text-dark justify-content-around p-0">
          <img src="<%=news.image%>" class="row col-md-4 col-sm-12" />
          <div class="row col-md-7 col-sm-12 justify-content-around">
            <%=news.description%>
          </div>
          <%if(!currentUser){}else{%>
          <div class="d-flex flex-column align-items-start">
            <a class="btn btn-warning" href="/news/<%=news._id%>/edit%>"
              >Update</a
            >
            <form action="/news/<%=news._id%>?_method=DELETE" method="POST">
              <button class="btn btn-danger" style="margin: 10px">
                Delete
              </button>
            </form>
          </div>
          <%}%>
        </div>
      </div>
    </div>
