<%- include ('../partials/header')%>
<link rel="stylesheet" type="text/css" href="/news.css" />
<link
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  rel="stylesheet"
/>
<div id="container">
  <div class="jumbotron text-center" style="border-radius: 35px">
    <h1>Welcome to the NEWS Section</h1>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around p-5">
      <div class="d-flex flex-column">
        <h1><%=news.header%></h1>
        <div class="d-flex p-0 text-dark justify-content-around p-0">
          <img src="<%=news.image%>" class="row col-md-4" />
          <div class="row col-md-7 justify-content-around">
            <%=news.description%>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row col-md-2 col-4 mr-0 pr-0">
      <div class="container">
        <form class="searchbar">
          <input
            type="search"
            placeholder="Search here"
            name="search"
            class="searchbar-input"
            onkeyup="buttonUp();"
            required
          />
          <input type="submit" class="searchbar-submit" value="GO" />
          <span class="searchbar-icon"
            ><i class="fa fa-search" aria-hidden="true"></i
          ></span>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/footer')%>
