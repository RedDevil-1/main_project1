<body>
  <div class="container  animate__animated animate__backInLeft pt-0" style="text-align:center;background-color: #f64c72;" id="jumboMargin">
    <h1 class="display-3">TECH FOR YOU</h1>
    <p class="lead">Welcome to the world of technology.</p>
    <p>A place to keep yourself updated.</p>
  </div>

<div class="d-flex animate__animated animate__bounce mx-3">
  <div class="col-left flex-column">
    <a class="btn " href="news">NEWS</a>
    <a class="btn " href="preBuilt">PRE-BUILT PC</a>
    <a class="btn " href="gadgets">GADGETS</a>
  </div>
  <div class="row">
    <div class="slideshow-container">
      <div class="d-flex flex-row">
        <% news.forEach(function(newsAll){%>
        <div class="mySlides1">
         <table>
           <tr >
            <td colspan="2">
              <h4 style="text-align: center;">
               <%=newsAll.header%>
                </h4>
               
              </td>      
            </tr>
            <tr>
             <td  >
            <img src="<%=newsAll.image%>" style="width:100%; height:300px" >
<!-- <img src="" style="width: 600px; height: 400px;"> -->
</td>     

  <td class="d-flex flex-column mt-5 align-items-center"><p>
    <%=newsAll.brief%>
  </p> <a class="btn btn-info btn-sm" href="/news/<%=newsAll._id%>">Check Out</a>
  </td>
</tr>
          
            </table>
            
          <a class="prev" onclick="plusSlides(-1, 0)">&#10094;</a>
          <a class="next" onclick="plusSlides(1, 0)">&#10095;</a>
        </div>
        <% })%>
      </div>
      </div>

      <div class="slideshow-container">
        <% builts.forEach(function(built){%>
        <div class="mySlides2">
          <div class="card bg-dark align-items-center text-light">
            <img
            style="width:100%; height:300px"
              class="card-img-top"
              src="<%=built.Image%>"
              alt="Card image cap"
            />
            <div class="card-body">
              <h5 class="card-title"><%=built.ModelName%> </h5>
              <p class="card-text">
               <%=built.Price%>
              </p>
              <a href="/preBuilt/<%=built._id%>" class="btn btn-primary">Go to Built</a>
            </div>
          </div>
       
        </div>
        <%})%>
        <a class="prev" onclick="plusSlides(-1, 1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1, 1)">&#10095;</a>
      </div>
    </div>
