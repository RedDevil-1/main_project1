<%- include ('../partials/header')%>
<link rel="stylesheet" href="/home.css" />
<div id="mainContent">
  <div id="row1Element1">
    <h1>TECH FOR YOU</h1>
    <p>Welcome to the world of technology.</p>
    <p>A place to keep yourself updated.</p>
  </div>
  <div id="row1Element2"></div>
  <a href="/gadgets">Gadgets</a>
  <div id="row2Element1"></div>

  <div class="slideshow-container" id="row2Element2">
    <% news.forEach(function(newsAll){%>
    <div class="mySlides1">
      <h4 id="r2e2-Header"><%=newsAll.header%></h4>
      <div id="r2e2-Body">
        <div id="prev">
          <a class="prev" onclick="plusSlides(-1, 0)">&#10094;</a>
        </div>

        <div id="r2e2-Image">
          <img src="<%=newsAll.image%>" />
        </div>
        <div id="r2e2-Brief">
          <p><%=newsAll.brief%></p>
          <a class="btn btn-info btn-sm" href="/news/<%=newsAll._id%>"
            >Check Out</a
          >
        </div>
        <div id="next">
          <a class="next" id="next" onclick="plusSlides(1, 0)">&#10095;</a>
        </div>
      </div>
    </div>
    <% })%>
  </div>
  <div>
    <% gadgets.forEach(function(gadgetAll){%>
    <p><%=gadgetAll.ModelName%></p>

    <%})%>
  </div>
</div>

