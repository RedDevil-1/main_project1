<div id="container" class="animate__animated animate__backInLeft">
  <div
    class="jumbotron text-center"
    style="background-color: #282c35; color: beige; border-radius: 35px"
  >
    <h1>Welcome to the Laptop Section</h1>
    <%if(!currentUser){}else{%>
    <a class="btn btn-sm btn-success" href="/gadgets/laptops/new">Add Laptop</a>
    <%}%>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around">
      <% Laptops.forEach(function(laptop){%>
      <div
        class="d-flex animate__animated animate__slideInLeft col-lg-4 col-12 col-md-6 mb-3"
      >
        <div class="card align-items-center">
          <h5 class="card-title"><%=laptop.ModelName%></h5>
          <img class="card-img-top" src="<%= laptop.Image %>" alt="News1" />
          <hr class="mt-0" />
          <div class="card-body d-flex flex-column">
            <div class="card-body">
              <h6>â‚¹<%=laptop.Price%></h6>
              <p class="card-text"><%= laptop.Brief%></p>
              <a
                href="/gadgets/laptops/<%=laptop._id%>"
                class="mt-auto btn-block btn btn-primary"
                >More Details</a
              >
            </div>
          </div>
        </div>
      </div>
      <%}); %>
