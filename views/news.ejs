<%- include ('../partials/header')%>
<link rel="stylesheet" type="text/css" href="/news.css" />
<link
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  rel="stylesheet"
/>
<div id="container" class="animate__animated animate__backInLeft">
  <div
    class="jumbotron text-center"
    style="background-color: #282c35; color: beige; border-radius: 35px"
  >
    <h1>Welcome to the NEWS Section</h1>
    <%if(!currentUser){}else{%>
    <a class="btn btn-sm btn-success" href="/news/new">Add News</a> <%}%>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around">
      <% news.forEach(function(news1){%>
      <div
        class="d-flex animate__animated animate__slideInLeft col-lg-4 col-12 col-md-6 mb-3"
      >
        <div class="card" style="align-items: center; border-radius: 20px">
          <h5 class="card-title" style="text-align: center">
            <%=news1.header %>
          </h5>
          <img
            class="card-img-top"
            src="<%= news1.image %>"
            alt="News1"
            style="border-radius: 10px"
          />
          <hr class="mt-0" />
          <div class="card-body d-flex flex-column">
            <div class="card-body">
              <p class="card-text"><%= news1.brief%></p>
              <a
                href="/news/<%=news1.id%>"
                class="mt-auto btn-block btn btn-primary"
                >View More Details</a
              >
            </div>
          </div>
        </div>
      </div>
      <%}); %>
    </div>
