<style>
 
  th{
    text-align: center;
  }
  td{
    text-align: center;
  }
  table, th, td {
  border: 2px solid black;
  border-collapse: collapse;
}
</style>
<div id="container" class="animate__animated animate__backInLeft">
  <div class="jumbotron text-center" style="background-color: #282c35; color: beige;border-radius: 35px">
    <h1>Welcome to the Earphone Section</h1>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around  p-0">
      <img src="<%=earphone.Image%>" style="height:350px;"class="row animate__animated animate__flipInY  col-md-3 col-12 bg-info p-0"></img>

      <div class="row col-md-8 col-12">
        <table class="animate__animated animate__flipInX ">
          <tr>
            <th><h2>Specs</h2></th>
            <th><h2>Details</h2></th>
          </tr>
          <tr>
            <td><b>Model Name</b></td>
            <td><%=earphone.ModelName%></td>
          </tr>
          <tr>
            <td><b>Launch Price</b></td>
            <td>â‚¹<%=earphone.Price%></td>
          </tr>
          <tr>
            <td><b>Mic</b></td>
            <td><%=earphone.Mic%></td>
          </tr>
          <tr>
            <td><b>Connector Type</b></td>
            <td><%=earphone.ConnectorType%></td>
          </tr>
          <tr>
            <td><b>Connectivity</b></td>
            <td><%=earphone.Connectivity%></td>
          </tr>
          <tr>
            <td><b>Battery Capacity</b></td>
            <td><%=earphone.BatteryCapacity%></td>
          </tr>
          <tr>
            <td colspan="2"><b>Description</b><br>
            <%=earphone.Description%>
            </td>
          </tr>
        </table>
          <%if(!currentUser){}else{%>
            <div class="d-flex mt-4 align-items-start">
              <a class="btn btn-sm btn-warning" href="/gadgets/earphones/<%=earphone._id%>/edit%>"
                >Update</a
              >
              <form action="/gadgets/earphones/<%=earphone._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger" >
                  Delete
                </button>
           </form>
           </div>
          <%}%>
       
      </div>
    </div>
