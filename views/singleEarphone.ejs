<%- include ('../partials/header')%>
<link rel="stylesheet" type="text/css" href="/news.css" />
<link
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  rel="stylesheet"
/>
<style>
 
  th{
    text-align: center;
  }
  td{
    text-align: center;
  }
  table, th, td {
  border: 2px solid black;
  border-collapse: collapse;
}
</style>
<div id="container">
  <div class="jumbotron text-center" style="border-radius: 35px">
    <h1>Welcome to the Earphone Section</h1>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around  p-0">
      <img src="<%=earphone.Image%>" style="height:600px;"class="row col-md-3 col-12 bg-info p-0"></img>

      <div class="row col-md-8 col-12">
        <table>
          <tr>
            <th><h2>Specs</h2></th>
            <th><h2>Details</h2></th>
          </tr>
          <tr>
            <td><b>Model Name</b></td>
            <td><%=earphone.ModelName%></td>
          </tr>
          <tr>
            <td><b>Launch Price</b></td>
            <td>â‚¹<%=earphone.Price%></td>
          </tr>
          <tr>
            <td><b>Mic</b></td>
            <td><%=earphone.Mic%></td>
          </tr>
          <tr>
            <td><b>Connector Type</b></td>
            <td><%=earphone.ConnectorType%></td>
          </tr>
          <tr>
            <td><b>Connectivity</b></td>
            <td><%=earphone.Connectivity%></td>
          </tr>
          <tr>
            <td><b>Battery Capacity</b></td>
            <td><%=earphone.BatteryCapacity%></td>
          </tr>
          <tr>
            <td colspan="2"><b>Description</b><br>
            <%=earphone.Description%>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="d-flex flex-row col-md-2 col-4 mr-0 pr-0">
      <div class="container">
        <form class="searchbar">
          <input
            type="search"
            placeholder="Search here"
            name="search"
            class="searchbar-input"
            onkeyup="buttonUp();"
            required
          />
          <input type="submit" class="searchbar-submit" value="GO" />
          <span class="searchbar-icon"
            ><i class="fa fa-search" aria-hidden="true"></i
          ></span>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/footer')%>
