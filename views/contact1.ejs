<%- include ('../partials/header')%>

<link rel="stylesheet" href="contact.css" />
<div class="container animate__animated animate__rollIn">
  <h1 class="brand"><span>TTS</span> Contact</h1>
  <div class="wrapper animated bounceInLeft">
    <div class="company-info">
      <ul>
        <li><i class="fa fa-road"></i>Unknown</li>
        <li><i class="fa fa-phone"></i> 1234 5678 90</li>
        <li><i class="fa fa-envelope"></i> ishan.sahu@tts.com</li>
      </ul>
    </div>
    <div class="contact">
      <h3>Email Us</h3>
      <form method="POST" action="/contact1">
        <p>
          <label>Name</label>
          <input type="text" name="name" />
        </p>
        <p>
          <label>Company</label>
          <input type="text" name="company" />
        </p>
        <p>
          <label>Email Address</label>
          <input type="email" name="email" />
        </p>
        <p>
          <label>Phone Number</label>
          <input type="text" name="phone" />
        </p>
        <p class="full">
          <label>Message</label>
          <textarea name="message" rows="5"></textarea>
        </p>
        <p class="full">
          <button type="submit">Submit</button>
        </p>
      </form>
    </div>
    <p><%=msg%></p>
  </div>
</div>
<%- include ('../partials/footer')%>
