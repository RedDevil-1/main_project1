<%- include ('../partials/header')%>
<link rel="stylesheet" type="text/css" href="/news.css" />
<link
  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
  rel="stylesheet"
/>
<div id="container">
  <div class="jumbotron text-center" style="border-radius: 35px">
    <h1>Welcome to the NEWS Section</h1>
  </div>
</div>
<div class="ml-4 mr-0" style="margin-top: 10px">
  <div class="d-flex pr-0">
    <div class="row col-md-10 col-8 justify-content-around">
      <%= fNews.header%>
      <div class="d-flex col-lg-4 col-12 col-md-6 mb-3">
        <div class="card" style="align-items: center; border-radius: 20px">
          <h5 class="card-title" style="text-align: center">
            <%=fNews.header %>
          </h5>
          <img
            class="card-img-top"
            src="<%= news1.image %>"
            alt="News1"
            style="border-radius: 10px"
          />
          <hr class="mt-0" />
          <div class="card-body d-flex flex-column">
            <div class="card-body">
              <p class="card-text"><%= fNews.brief%></p>
              <a
                href="/news/<%=news1.id%>"
                class="mt-auto btn-block btn btn-primary"
                >Go somewhere</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row col-md-2 col-4 mr-0 pr-0">
      <div class="container">
        <form class="searchbar">
          <input
            type="search"
            placeholder="Search here"
            name="search"
            class="searchbar-input"
            onkeyup="buttonUp();"
            required
          />
          <input type="submit" class="searchbar-submit" value="GO" />
          <span class="searchbar-icon"
            ><i class="fa fa-search" aria-hidden="true"></i
          ></span>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/footer')%>
